<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48sp"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        tools:ignore="SpUsage" />
    <TextView
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/result"
        />
    <Button
        android:id="@+id/bClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Clear"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@id/calculate"/>

    <Button
        android:id="@+id/bDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/panah"
        android:layout_below="@id/calculate"
        android:layout_toRightOf="@id/bClear"/>
    <Button
        android:id="@+id/bBagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="/"
        android:layout_below="@id/calculate"
        android:layout_toRightOf="@id/bDel"/>
    <Button
        android:id="@+id/bKali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="X"
        android:layout_below="@id/calculate"
        android:layout_toRightOf="@id/bBagi"/>
    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_below="@id/bClear"
    />
    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_below="@id/bClear"
        android:layout_toRightOf="@+id/b7"
        />
    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_below="@id/bClear"
        android:layout_toRightOf="@id/b8"
        />
    <Button
        android:id="@+id/bTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_below="@id/bClear"
        android:layout_toRightOf="@id/b9"
        />
    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@id/b7"/>
    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_below="@id/b8"
        android:layout_toRightOf="@id/b4"
        />
    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_below="@id/b8"
        android:layout_toRightOf="@id/b5"
        />
    <Button
        android:id="@+id/bKurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@id/b8"
        android:layout_toRightOf="@id/b6"
        />
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/b4"/>
    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@id/b5"
        android:layout_toRightOf="@id/b1"/>
    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_below="@id/b5"
        android:layout_toRightOf="@id/b2"/>
    <Button
        android:id="@+id/bSamaDengan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_below="@id/b5"
        android:layout_toRightOf="@id/b3"/>
    <Button
        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@id/b1"
        android:layout_below="@id/b2"/>

</RelativeLayout>